<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zalo.zalo.MainActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo" />

    <Button
        android:textAllCaps="false"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="#158FC2"
        android:text="Đăng nhập"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <TextView
        android:textSize="15dp"
        android:textColor="#717E87"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Đăng nhập bằng mật khẩu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#717E87"
        android:text="Đăng ký"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <TextView
        android:textSize="15dp"
        android:textColor="#717E87"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Đăng ký tài khoản mới bằng số điện thoại"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
